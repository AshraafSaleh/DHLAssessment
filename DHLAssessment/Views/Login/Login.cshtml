@model DHLAssessment.Models.LoginViewModel

<style>
    
    .login-body {
        background-image: url('/Image/DHL1.jpeg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Login page specific styles */
    .login-page .darker-border {
        border-color: #ba0c2f !important;
    }

    /* Style the container to ensure it looks good over the background */
    .login-page .container {
        background: rgba(255, 255, 255, 0.5); 
        padding: 8px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 315px;
        backdrop-filter: blur(5px); 
    }

    .login {
        color: #000; 
        text-transform: uppercase;
        letter-spacing: 2px;
        display: block;
        font-weight: bold;
        font-size: x-large;
    }

    .card {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 350px;
        width: 300px;
        flex-direction: column;
        gap: 35px;
        background: #ffcc00;
        box-shadow: 16px 16px 32px #c8c8c8, -16px -16px 32px #fefefe;
        border-radius: 8px;
    }

    .inputBox {
        position: relative;
        width: 250px;
        margin-bottom: 20px;
    }

        .inputBox input {
            width: 100%;
            padding: 10px;
            outline: none;
            border: none;
            color: #000;
            font-size: 1em;
            background: transparent;
            border-left: 2px solid #ba0c2f;
            border-bottom: 2px solid #ba0c2f;
            transition: 0.1s;
            border-bottom-left-radius: 8px;
        }

        .inputBox span {
            margin-top: 5px;
            position: absolute;
            left: 0;
            transform: translateY(-4px);
            margin-left: 10px;
            padding: 10px;
            pointer-events: none;
            font-size: 12px;
            color: #000;
            text-transform: uppercase;
            transition: 0.5s;
            letter-spacing: 3px;
            border-radius: 8px;
        }

        .inputBox input:valid ~ span,
        .inputBox input:focus ~ span {
            transform: translateX(113px) translateY(-15px);
            font-size: 0.8em;
            padding: 5px 10px;
            background: #ba0c2f;
            letter-spacing: 0.2em;
            color: #fff;
            border: 2px;
        }

        .inputBox input:valid,
        .inputBox input:focus {
            border: 2px solid #ba0c2f;
            border-radius: 8px;
        }

    .enter {
        height: 45px;
        width: 100%; 
        border-radius: 5px;
        border: 2px solid #ba0c2f;
        cursor: pointer;
        background-color: #ffcc00;
        transition: 0.5s;
        text-transform: uppercase;
        font-size: 10px;
        letter-spacing: 2px;
        margin-bottom: 1em;
        margin-top: 20px;
        color: #000; 
    }

        .enter:hover {
            background-color: #ba0c2f;
            color: white;
        }

    .forgot-password {
        display: block;
        text-align: center;
        margin-top: 10px;
        color: #ba0c2f;
        text-decoration: none;
    }

        .forgot-password:hover {
            text-decoration: underline;
        }

    /* Password visibility toggle */
    .password-toggle-container {
        position: relative;
        width: 250px;
        display: flex;
        justify-content: flex-end;
    }

        .password-toggle-container button {
            background: none;
            border: none;
            cursor: pointer;
            margin-top: -20px;
        }
</style>


<body class="login-body">
    <div class="login-page">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <div class="card">
                        <a class="login">Log in</a>
                        <form asp-action="Login" method="post">
                            <div class="inputBox">
                                <input type="text" name="Username" required="required">
                                <span class="user">Username</span>
                            </div>

                            <div class="inputBox">
                                <input type="password" name="Password" id="password" required="required">
                                <span>Password</span>
                            </div>

                            <div class="password-toggle-container">
                                <button type="button" id="togglePassword">
                                    <i class="bi bi-eye" id="eyeIcon"></i> 
                                </button>
                            </div>

                            <button type="submit" class="enter">Enter</button>
                            <a href="#" class="forgot-password">Forgot Password</a>
                            <!-- Error Handling -->
                            @if (ViewBag.ErrorMessage != null)
                            {
                                <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


<!-- Eyes function -->
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#togglePassword').click(function () {
                const passwordField = $('#password');
                const passwordFieldType = passwordField.attr('type');
                const eyeIcon = $('#eyeIcon');
                if (passwordFieldType === 'password') {
                    passwordField.attr('type', 'text');
                    eyeIcon.removeClass('bi-eye').addClass('bi-eye-slash'); 
                } else {
                    passwordField.attr('type', 'password');
                    eyeIcon.removeClass('bi-eye-slash').addClass('bi-eye');
                }
            });
        });
    </script>
}
